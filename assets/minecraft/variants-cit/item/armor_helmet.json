{
  "type": "component_data",
  "items": ["minecraft:diamond_helmet",
    "minecraft:netherite_helmet",
    "minecraft:golden_helmet",
    "minecraft:leather_helmet",
    "minecraft:iron_helmet",
    "minecraft:chainmail_helmet"
  ],
  "modelPrefix": "item/armor/",
  "modelParent": "minecraft:item/generated",
  "parameters": {
    "componentType": "custom_name",
    "expect": "rich_text",
    "debug": true,
    "transform": ["lowercase",
      {
        "regex": "(?iu)ё",
        "substitution": "е",
        "matchAll": false,
        "validate": false
      },
    {
        "regex": "(?iu)невидимка",
        "substitution": "invisible_helmet",
        "matchAll": true,
        "validate": false
      },
      {
        "regex": "(?iu)наушники",
        "substitution": "headphones",
        "matchAll": true,
        "validate": false
      },
      {
        "regex": "(?iu)невидимка alt",
        "substitution": "invisible_helmet_alt",
        "matchAll": true,
        "validate": false
      },
      {
        "regex": "(?iu)сигарета",
        "substitution": "siggarete",
        "matchAll": true,
        "validate": false
      }

    ]
  }
}